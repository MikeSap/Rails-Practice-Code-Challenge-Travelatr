<%= form_for @blogger do |f|%>
  
  <% if @blogger.errors.any? %>
  <div id ="error_explanation">
  <h2> <%= pluralize(@blogger.errors.count, "error") %> in this form</h2>
  <ul>
  <% @blogger.errors.full_messages.each do |message| %>
  <li> <%=message %> </li>
  <%end%>
  </div>
  <%end%>

    <%=f.label :name%>
    <%=f.text_field :name%><br>

    <%=f.label :bio%>
    <%=f.text_area :bio%><br>

    <%=f.label :age%>
    <%=f.number_field :age%><br>

    <%=f.submit%>

<%end%>